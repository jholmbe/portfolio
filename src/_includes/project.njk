---
layout: 'base.njk'
--- 
<body id="block-container">
  <div class="content-flex-container">
    <header> <!-- header and site nav -->
      <div class="title-name"><a href="/">Justin Holmberg</a></div>
      <nav>
          <ul>
          <li><a href="#work-link">Projects</a></li>
          <li><a href="#about-link">About Me</a></li>
          <li><a href="#contact-link">Connect</a></li>
          </ul>
      </nav>
    </header>
    <div class="project-desc">
      <div>
        <img src="{{ coverImg }}" alt="{{ altText }}"/> <!-- cover img -->
        <div class="project-intro">
          <div>
            <h1><a href="{{ liveDemo }}">{{ title }}</a></h1> 
            <div class="oneliner">{{ oneLiner }}</div>
          </div>
          <div class="repo-link">
            <a href="{{ projectRepository }}" target="_blank" rel="noopener noreferrer">REPOSITORY</a>
            <svg xmlns="http://www.w3.org/2000/svg" height="1.2rem" viewBox="0 0 24 24" width="1.2rem" fill="white">
              <path d="M0 0h24v24H0z" fill="none" />
              <path d="M19 19H5V5h7V3H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2v-7h-2v7zM14 3v2h3.59l-9.83 9.83 1.41 1.41L19 6.41V10h2V3h-7z" />
            </svg>
          </div>
        </div>
        <div class="divider"></div>
        <div class="project-desc-tags">
          <div class="project-desc">{{ projectDescription | safe }}</div>
          <ul class="tag-list">
            {% for tag in tags %}
              <li>{{ tag }}</li>
            {% endfor %}
          </ul>
        </div>
      </div>
    </div>
  </div>
    <div>
      {{ content | safe }}
    </div>
    <footer>
      <div class="divider"></div>
      <div class="footer-content-container">
        <div class="footer-content">
          <svg xmlns="http://www.w3.org/2000/svg" height="2rem" viewBox="0 0 24 24" width="2rem" fill="white">
            <path d="M0 0h24v24H0z" fill="none"/>
            <path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z"/>
          </svg>
          <a class="title-name" href="/">BACK TO PROJECTS</a>
        </div>
        <div class="footer-content">
          <a class="title-name" href="{{ projectRepository }}" target="_blank" rel="noopener noreferrer">REPOSITORY</a>
          <svg xmlns="http://www.w3.org/2000/svg" height="2rem" viewBox="0 0 24 24" width="2rem" fill="white">
            <path d="M0 0h24v24H0z" fill="none" />
            <path d="M19 19H5V5h7V3H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2v-7h-2v7zM14 3v2h3.59l-9.83 9.83 1.41 1.41L19 6.41V10h2V3h-7z" />
          </svg>
        </div>
      </div>
    </footer>
</body>