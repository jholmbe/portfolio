---
layout: "base.njk"
---

<div class="content-flex-container">
  {# PROJECT SUMMARY & CONTEXT CARD: - cover img - one line desciptor - link for live product
  (title) - link for file repository - list of skills applied/learned - project description #}
  <div class="project-desc">
    <div>
      {# COVER IMAGE #}
      <img src="{{ coverImg | url }}" alt="{{ altText }}" />

      <div class="project-intro">
        <div>
          {# TITLE product link #}
          <h1><a href="{{ liveDemo }}">{{ title }}</a></h1>

          {# ONELINER desciptor #}
          <div class="oneliner">{{ oneLiner }}</div>
        </div>

        {# REPOSITORY link and svg icon #}
        <div class="repo-link">
          <a href="{{ projectRepository }}" target="_blank" rel="noopener noreferrer">REPOSITORY</a>
          <svg
            xmlns="http://www.w3.org/2000/svg"
            height="1.2rem"
            viewBox="0 0 24 24"
            width="1.2rem"
            fill="white"
          >
            <path d="M0 0h24v24H0z" fill="none" />
            <path
              d="M19 19H5V5h7V3H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2v-7h-2v7zM14 3v2h3.59l-9.83 9.83 1.41 1.41L19 6.41V10h2V3h-7z"
            />
          </svg>
        </div>
      </div>
      <div class="divider"></div>

      {# DESCRIPTION p #}
      <div class="project-desc-tags">
        <div class="project-desc">{{ projectDescription | safe }}</div>

        {# SKILLS list #}
        <ul class="tag-list">
          {% for tag in tags %}
          <li>{{ tag }}</li>
          {% endfor %}
        </ul>
      </div>
    </div>
  </div>
</div>

{# CONTENT #}
<div>{{ content | safe }}</div>

{# FOOTER: home link, repository link #}
<footer>
  <div class="divider"></div>
  <div class="footer-content-container">
    <div class="footer-content">
      <svg
        xmlns="http://www.w3.org/2000/svg"
        height="2rem"
        viewBox="0 0 24 24"
        width="2rem"
        fill="white"
      >
        <path d="M0 0h24v24H0z" fill="none" />
        <path d="M20 11H7.83l5.59-5.59L12 4l-8 8 8 8 1.41-1.41L7.83 13H20v-2z" />
      </svg>
      <a class="title-name" href="{{ '/' | url }}">BACK TO PROJECTS</a>
    </div>
    <div class="footer-content">
      <a class="title-name" href="{{ projectRepository }}" target="_blank" rel="noopener noreferrer"
        >REPOSITORY</a
      >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        height="2rem"
        viewBox="0 0 24 24"
        width="2rem"
        fill="white"
      >
        <path d="M0 0h24v24H0z" fill="none" />
        <path
          d="M19 19H5V5h7V3H5c-1.11 0-2 .9-2 2v14c0 1.1.89 2 2 2h14c1.1 0 2-.9 2-2v-7h-2v7zM14 3v2h3.59l-9.83 9.83 1.41 1.41L19 6.41V10h2V3h-7z"
        />
      </svg>
    </div>
  </div>
</footer>
