{# NAVIGATION links #}
<header>
  <div class="header-container"> 
    <div class="title-name"><a href="/">Justin Holmberg</a></div>
    <nav>
      <ul>
        <li><a href="{{ '/index.html#work-link' | url }}">Projects</a></li>
        <li><a href="{{ '/index.html#about-link' | url }}">About Me</a></li>
        <li><a href="{{ '/index.html#contact-link' | url }}">Connect</a></li>
      </ul>
    </nav>
  </div>
</header>

{# MAIN contains all the projects and footer #}
<main class="main-content">

  {% for project in projects %}
  <div class="projects" id="work-link">
    <a href="{{ ('/projects/' ~ project.slug ~ '/') | url }}">
      <div class="card">
        <img src="{{ project.img | url }}" alt="{{ project.alt }}"/>
        <div class="desc">
          <div>{{ project.role }}</div>
          <h1>{{ project.title }}</h1>
          <div class="oneliner">{{ project.oneliner }}</div>
          <div class="divider"></div>
        </div>
      </div>
    </a>
  </div>
  {% endfor %}
  
  {# FOOTER contains the ABOUT and WEBSITE description, and the CONTACT links #}
  <div class="content-footer">

    {# ABOUT description #}
    <div class="about">
      <h1 id="about-link">about</h1>
