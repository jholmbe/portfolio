{# MAIN contains all the projects and footer #}
<main class="main-content">

  {% for project in projects %}
  <div class="projects" id="projects">
    <a href="{{ project.slug | url }}">
      <div class="card">
        <img src="{{ project.img | url }}" alt="{{ project.alt }}"/>
        <div class="desc">
          <div>{{ project.role }}</div>
          <h1>{{ project.title }}</h1>
          <div class="oneliner">{{ project.oneliner }}</div>
          <div class="divider"></div>
        </div>
      </div>
    </a>
  </div>
  {% endfor %}
  
