{
  "name": "jholm-11ty-portfolio",
  "version": "1.0.0",
  "description": "A portfolio that showcases my projects, skills, and experiences as a designer and developer.",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:css": "npx @tailwindcss/cli -i ./src/input.css -o ./public/styles.css",
    "watch:css": "npx @tailwindcss/cli -i ./src/input.css -o ./public/styles.css --watch",
    "build": "npm run build:css && eleventy",
    "start": "npm run build:css && eleventy --serve & npm run watch:css",
    "build-ghpages": "npm run build:css && npx @11ty/eleventy",
    "format": "prettier --write \"src/**/*.{njk,css,js}\""
  },
  "keywords": [
    "portfolio",
    "eleventy"
  ],
  "author": "Justin Holmberg",
  "license": "ISC",
  "type": "module",
  "devDependencies": {
    "@11ty/eleventy": "^3.1.1",
    "@tailwindcss/cli": "^4.2.1",
    "prettier": "^3.8.1",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tailwindcss": "^4.2.1"
  }
}
